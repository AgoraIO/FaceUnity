<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/loading</item>
        <!--禁止多点触控-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="ActivityBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="FullScreenTheme" parent="ActivityBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="photo_tip_popup_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_tip_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popup_tip_out</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
