<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="io.agora.rtcwithfu.activities.MainActivity">

    <EditText
        android:id="@+id/edt_channel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:digits="@string/legal_characters_for_agora"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onStartBroadcastClick"
        android:text="start broadcast" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="onCheckLocalRecordBoxCLick"
        android:text="enable customized audio source" />

</LinearLayout>
