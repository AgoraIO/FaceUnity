<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/effect_type_item_height"
    android:orientation="horizontal"
    android:background="@color/percent60translucentBlack">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/effect_option_item_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/home_function_name_beauty"
        android:textSize="@dimen/text_size_26">
    </android.support.v7.widget.AppCompatTextView>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/effect_option_item_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/home_function_name_makeup"
        android:textSize="@dimen/text_size_26">
    </android.support.v7.widget.AppCompatTextView>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/effect_option_item_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/home_function_name_sticker"
        android:textSize="@dimen/text_size_26">
    </android.support.v7.widget.AppCompatTextView>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/effect_option_item_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/home_function_name_beauty_body"
        android:textSize="@dimen/text_size_26">
    </android.support.v7.widget.AppCompatTextView>
</LinearLayout>
